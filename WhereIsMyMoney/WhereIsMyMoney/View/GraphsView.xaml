<UserControl x:Class="WhereIsMyMoney.View.GraphsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WhereIsMyMoney.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="15px"/>

            <RowDefinition Height="50px"/>

            <RowDefinition Height="50px"/>


        </Grid.RowDefinitions>

        <Button Grid.Column="1" Grid.Row="1" Content="Incomes graph" Click="Button_Click"/>
        <Button Grid.Column="3" Grid.Row="1" Content="Outcomes graph" Click="Button_Click_2"/>
        <Button Grid.Column="5" Grid.Row="1" Content="Money graph" Click="Button_Click_1"/>
    </Grid>
</UserControl>
